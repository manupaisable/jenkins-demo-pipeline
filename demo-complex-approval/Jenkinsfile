pipeline {
    agent any
    stages {
        stage('CI') { 
            steps {
                sh 'bash -c ls -la .' 
            }
        }
		stage('parallel-stages-1') {
			parallel {
		        stage('acceptance-QA') { 
		            steps {
		                sh 'bash -c ls -la .' 
		            }
		        }
		        stage('performance') { 
			        try {
		                input message: "Run performance?"
		                sh 'bash -c ls -la .' 
					} catch (e) {
					}		        
		        }
		        stage('security') { 
			        try {
		                input message: "Run security?"
		                sh 'bash -c ls -la .' 
					} catch (e) {
					}		        
		        }
	        }
		}
		stage('parallel-stages-2') {
			parallel {
		        stage('CAB') { 
		            steps {
		                input message: "CAB approves?"
		                sh 'bash ./build.sh' 
		            }
		        }
		        stage('staging') { 
			        try {
		                input message: "Run staging?"
		                sh 'bash -c ls -la .' 
					} catch (e) {
					}		        
		        }
		        stage('user-acceptance') { 
			        try {
		                input message: "Run user acceptance?"
		                sh 'bash -c ls -la .' 
					} catch (e) {
					}		        
		        }
	        }
		}
        stage('production') { 
            steps {
                sh 'bash -c ls -la .' 
            }
        }		
    }
}
